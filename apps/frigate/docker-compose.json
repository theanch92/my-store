{
  "services": [
    {
      "name": "frigate",
      "image": "ghcr.io/blakeblackshear/frigate:0.16.2-rocm",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "internalPort": 5000,
      "volumes": [
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/media/frigate",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "shmSize": "64m",
      "isMain": true
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json"
}
